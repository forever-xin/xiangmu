<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="商城首页"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/bg_pink"
        />

    <RelativeLayout
        android:layout_below="@+id/title"
        android:id="@+id/first_rel"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/bg_frame_grey">

        <android.support.v4.view.ViewPager
            android:id="@+id/fr_viewpager"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="155dp"
            android:gravity="right|center_horizontal"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/fr_per_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="190dp"
            android:src="@mipmap/fragment_per_page"/>

        <ImageView
            android:id="@+id/fr_morethan_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginTop="190dp"
            android:src="@mipmap/fragment_morethan_page"/>

        <ImageView
            android:id="@+id/fr_daily_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="290dp"
            android:src="@mipmap/fragment_daily_page"/>

        <ImageView
            android:id="@+id/fr_other_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/fr_daily_page"
            android:layout_marginTop="20dp"
            android:src="@mipmap/fragment_other_page"/>

        <ImageView
            android:id="@+id/fr_service_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/fr_other_page"
            android:layout_marginTop="20dp"
            android:src="@mipmap/fragment_service_page"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/first_rel"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/bg_grey">

            <RelativeLayout
                android:id="@+id/fr_page_lin_cloth"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@color/bg_grey">

                <TextView
                    android:id="@+id/fr_page_cloth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="蛋糕"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:background="@color/bg_grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fr_page_lin_trousers"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/fr_page_pants"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"

                    android:gravity="center_vertical"
                    android:text="面包"
                    android:background="@color/bg_grey"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fr_page_lin_shose"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/fr_page_shoose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"

                    android:gravity="center_vertical"
                    android:text="饼干"
                    android:background="@color/bg_grey"
                    android:textColor="#000"
                    android:textSize="14sp" />


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#ebebeb"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/fr_page_img1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/img4"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/fr_page_img2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img5"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/fr_page_img3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/img8" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>





