<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_pink">
        <ImageView
            android:id="@+id/wash_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/bg_back"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:padding="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:background="@color/bg_pink"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/fragment_wash_spring"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="蛋糕"
            android:textSize="16sp"
            android:textColor="@color/bg_red"/>
        <TextView
            android:id="@+id/fragment_wash_summer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="面包"
            android:textColor="@color/bg_red"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/fragment_wash_winter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="饼干"
            android:textColor="@color/bg_red"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cursor"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="@color/bg_main_blue"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_wash_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>
