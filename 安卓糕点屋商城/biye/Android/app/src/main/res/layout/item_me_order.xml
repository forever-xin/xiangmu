<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_weight="8"
            >

            <ImageView
                android:id="@+id/item_shooping_car_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/item_shooping_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/item_shooping_car_img"
                android:layout_toRightOf="@+id/item_shooping_car_img"
                android:text="好吃，美味的蛋糕"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/item_shooping_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shooping_car_title"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/item_shooping_car_img"
                android:layout_toRightOf="@+id/item_shooping_car_img"
                android:text="新鲜 美味 "
                android:textColor="#d0d0d0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_shooping_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_shooping_car_type"
                android:layout_alignStart="@+id/item_shooping_car_type"
                android:layout_below="@+id/item_shooping_car_type"
                android:layout_marginTop="20dp"
                android:text="￥98.00"
                android:textColor="#FF0000"
                />


            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/item_shooping_car_price"
                android:layout_marginRight="12dp"
                android:text="2017-04-17 17:47:55"
                />

            <TextView
                android:id="@+id/product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shooping_car_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"

                android:layout_marginTop="8dp"
                android:text="数量：2"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
